<table class="table table-striped table-bordered table-condensed table-hover">

<% @patients.each do |patient| %>
  <tr>
   <td class="text-center"><%= patient.id %></td>
   <td class="text-cente"><%= patient.p_name %></td>
   <td class="text-cente"><%= patient.age %></td>
   <td class="text-cente"><%= patient.gender %></td> 
   <td class="text-cente"><%= patient.room_no %></td> 

    <% patient.kansatus.each do |kansatu| %>
    <td class="text-cente"><%= kansatu.id %></td>
    <% end %>

    <td><a href="../graphs/<%= patient.id %>">show</a></td>
  </tr>

<% end %>
</table>
<div class="col-sm-12">
<div class="bs-docs-header" id="content">
</div>
</div>

<div class="col-sm-10">
<% @patients.each do |patient| %>
<h2>
<ruby><rb><%= patient.p_name %><rt><%= patient.p_kana %></ruby>
<a href="../plans/<%= patient.id %>">show</a>
</h2>

   
<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th style="width:5%" class="text-center">患者</th>
   <th style="width:5%" class="text-center">id</th>
   <th style="width:40%" class="text-center">看護問題</th>
   <th style="width:15%" class="text-center">登録日</th>
   <th style="width:10%" class="text-center">評価</th>
   <th style="width:15%" class="text-center">次回評価日</th> 
  </tr>
<% patient.plans.each do |plan| %>
  <tr>
   <th style="width:5%" class="text-center"><%= plan.patient_id %></th>
   <td style="width:5%" class="text-center"><%= link_to plan.id, edit_plan_path(plan) %></td>
   <td style="word-wrap:break-word;" class="text-left"><%= plan.name %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.hyouka %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.jikai %></td>
  </tr>

  <% end %>
</table>

<% end %>
<%= link_to '新規投稿', new_plan_path %>
</div>

<div class="row col-sm-2">
<%= render 'layouts/sidebar' %>
</div>


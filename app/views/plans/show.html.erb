<div class="col-sm-12">
<div class="bs-docs-header" id="content">
<div class="container">

<div class="row">
  <div class="col-md-2"><h2><ruby><rb><%= @patient.p_name %><rt><%= @patient.p_kana %></ruby></h2></div>

<% if @patient.gender == '男' %>
<div class="col-sm-1"><br><img border="0" src="../images/men1.png" width="60" height="60" alt="男性" title="男性"></div>
<% else %>
<div class="col-sm-1"><br><img border="0" src="../images/women1.png" width="60" height="60" alt="女性" title="女性"></div>
<% end %>

  <div class="col-md-4"><h3>生年月日：<%= @patient.birth_date.strftime('%Y年%m月%d日') %></h3></div>
  <div class="col-md-2"><h3>年齢：<%= @patient.age %>歳</h3></div>
<div class="col-sm-6"><h4>感染症：<%= @patient.infection %>&emsp;
アレルギー：<%= @patient.allergic %></h4></div>
</div>

<div class="row">
  <div class="col-md-3"><h4>入院日:<%= @patient.hos_date.strftime('%Y年%m月%d日 %H:%M') %></h4></div>
  <div class="col-md-2"><h4>部屋番号：<%= @patient.room_no %></h4></div>
  <div class="col-md-5"><h4>血液型：<%= @patient.bloodtype %>型&emsp;&emsp;身長：<%= @patient.height %>cm&emsp;体重：<%= @patient.weight %>kg
</h4></div>
</div>

</div></div>
</div>

<div class="col-sm-10">

<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr class="info">
   <th style="width:5%" class="text-center">id</th>
   <th style="width:44%" class="text-center">内容</th>
   <th style="width:13%" class="text-center">登録日</th>
   <th style="width:13%" class="text-center">評価日</th>
   <th style="width:7%" class="text-center">評価</th>
   <th style="width:13%" class="text-center">次回評価日</th> 
  </tr>


<% @plans.each do |plan| %>

  <tr>
   <td class="text-center">#<%= link_to plan.plno, edit_plan_path(plan) %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= link_to plan.name, pdetail_path(plan) %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.hyokad.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.hyouka %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.jikai.strftime('%Y年%m月%d日') %></td>
  </tr>
  <tr>
   <th class="text-center">目標</th> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mokuhyo_1 %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyoud_1.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= truncate(plan.mhyouka_1, length:3) %></td> 
   <td style="word-wrap:break-word;" class="text-left"></td>
  </tr>
<% unless plan.mokuhyo_2 == '' %>
  <tr>
   <td class="text-center"></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mokuhyo_2 %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyoud_2.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyouka_2 %></td> 
   <td style="word-wrap:break-word;" class="text-left"></td>
  </tr>
<% end %>
<% unless plan.mokuhyo_3 == '' %>
  <tr>
   <td class="text-center"></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mokuhyo_3 %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyoud_3.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyouka_3 %></td> 
   <td style="word-wrap:break-word;" class="text-left"></td>
  </tr>
<% end %>
<% unless plan.mokuhyo_4 == '' %>
  <tr>
   <td class="text-center"></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mokuhyo_4 %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyoud_4.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyouka_4 %></td> 
   <td style="word-wrap:break-word;" class="text-left"></td>
  </tr>
<% end %>
<% unless plan.mokuhyo_5 == '' %>
  <tr>
   <td class="text-center"></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mokuhyo_5 %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.touroku.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyoud_5.strftime('%Y年%m月%d日') %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= plan.mhyouka_5 %></td> 
   <td style="word-wrap:break-word;" class="text-left"></td>
  </tr>
<% end %>


<% end %>
</table>

<%= link_to '一覧に戻る', plans_path %>

</div>

<div class="row col-sm-2">
<%= render 'layouts/sidebar' %>
</div>

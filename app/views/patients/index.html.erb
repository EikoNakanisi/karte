



<table class="table table-striped table-bordered table-condensed table-hover">
  <tr>
   <th style="width:10%" class="text-center">患者id</th>
   <th style="width:20%" class="text-center">患者名</th>
   <th style="width:20%" class="text-center">入院日</th>
   <th style="width:10%" class="text-center">部屋番号</th> 
   <th style="width:10%" class="text-center">性別</th> 
   <th colspan="3" class="text-center"></th> 
  </tr>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
   <th style="width:10%" class="text-center"><%= link_to patient.id, patient %></th>
   <th style="width:20%" class="text-center"><%= patient.p_name %></th>
   <th style="width:20%" class="text-center"><%= patient.hos_date.strftime('%Y年%m月%d日 %H時%M分') %></th>
   <td style="width:10%" class="text-center"><%= patient.room_no %></td>
   <td style="width:10%" class="text-center"><%= patient.gender %></td> 
   <td><%= link_to 'kansatus', kansatus_path %></td>
   <td><%= link_to 'Newkansatus', new_kansatu_path %></td>


      </tr>
    <% end %>
  </tbody>
</table>




<br>
<div class="col-sm-12 row text-center">
<%= link_to 'CSV', patients_path(format: "csv"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
<%= link_to 'Excel', patients_path(format: "xls"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
</div>
<%= form_tag import_patients_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<%= link_to '新規患者投稿', new_patient_path, class: 'btn btn-primary' %>
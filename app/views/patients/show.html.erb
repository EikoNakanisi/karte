<table class="table table-condensed table-hover table-bordered">
<tr>
   <th style="width:25%" class="text-center">住所</th>
   <td style="width:65%" class="text-left"><%= simple_format @patient.address %></th>
</tr>
<tr>
   <th style="width:25%" class="text-center">診断名</th>

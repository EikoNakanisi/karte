    <%= f.text_area :value, class: 'form-control', rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :hobby, '趣味' %>
    <%= f.text_area :hobby, class: 'form-control', rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :anniversary, '家族内の記念日・行事' %>
    <%= f.text_area :anniversary, class: 'form-control', rows: 3 %>
  </div>
  <div class="form-group">
    <%= f.label :fa_prob, '家族問題' %>
    <%= f.text_area :fa_prob, class: 'form-control', rows: 3 %>
  </div>



</div>
</div>

<button type="submit" class="btn btn-primary">投稿</button>
</form>

<% end %>
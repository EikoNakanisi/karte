  </div>
  <div class="form-group">
    <%= f.label :verbal, '言語' %>
    <%= f.text_field :verbal, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :skin, '皮膚' %>
    <%= f.text_field :skin, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :excretion, '排泄' %>
    <%= f.text_field :excretion, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :iadl, 'ＩＡＤＬ' %>
    <%= f.text_field :iadl, class: 'form-control' %>
  </div>
  <div class="form-group">

<% content_for(:title) do %>
  観察項目検索
<% end %>

<%= search_form_for @q do |f| %>
  <%= render 'search_form', f: f %>
<% end %>

<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th style="width:2%" class="text-right">患者id</th>
   <th style="width:6%" class="text-right">category</th>
   <th style="width:18%" class="text-right">観察名</th>
   <th style="width:8%" class="text-center">1day日勤</th> 
   <th style="width:8%" class="text-center">1day準夜</th> 
   <th style="width:8%" class="text-center">2day深夜</th>
   <th style="width:8%" class="text-center">2day日勤</th> 
   <th style="width:8%" class="text-center">2day準夜</th> 
   <th style="width:8%" class="text-center">3day深夜</th>
   <th style="width:8%" class="text-center">3day日勤</th> 
   <th style="width:8%" class="text-center">3day準夜</th> 
   <th style="width:8%" class="text-center">4day深夜</th>
   <th style="width:2%" class="text-right">id</th>
  </tr>
  <% @kansatus.each do |kansatu| %>
  <tr>
   <th style="width:2%" class="text-center"><%= kansatu.patient_id %></th>
   <th style="width:6%" class="text-center"><%= kansatu.category %></th>
   <th style="width:18%" class="text-right"><%= kansatu.ob_name %></th>
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.n_1d %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.j_1d %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.s_2d %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.n_2d %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.j_2d %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.s_3d %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.n_3d %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.j_3d %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= kansatu.s_4d %></td> 
   <td style="width:2%" class="text-center"><%= link_to kansatu.id, kansatu %></td>
  </tr>

  <% end %>
</table>

<br>
<div class="col-sm-12 row text-center">
<%= link_to 'CSV', kansatus_path(format: "csv"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
<%= link_to 'Excel', kansatus_path(format: "xls"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
</div>
<%= form_tag import_kansatus_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<%= link_to '新規投稿', new_kansatu_path %>
<div class="col-sm-12">
<div class="bs-docs-header" id="content">
</div>
</div>

<div class="col-sm-10">
<% @plans.each do |plan| %>
<h2>
<a href="../pdetails/<%= plan.id %>">show</a>
</h2>

   
<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th style="width:5%" class="text-center">plan_ID</th>
   <th style="width:5%" class="text-center">id</th>
   <th style="width:7%" class="text-center">区分</th>
   <th style="width:60%" class="text-center">内容</th>
   <th style="width:7%" class="text-center">評価</th>
   <th style="width:15%" class="text-center">評価日</th> 
  </tr>
<% plan.pdetails.each do |pdetail| %>
  <tr>
   <th style="width:5%" class="text-center"><%= pdetail.plan_id %></th>
   <td style="width:5%" class="text-center"><%= link_to pdetail.id, edit_pdetail_path(pdetail) %></td>
   <td style="word-wrap:break-word;" class="text-left"><%= pdetail.kubun %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= pdetail.naiyo %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= pdetail.hyouka %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= pdetail.hyokad %></td>
  </tr>

  <% end %>
</table>

<% end %>


<%= form_tag import_pdetails_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>
<%= link_to '新規投稿', new_pdetail_path %>
</div>

<div class="row col-sm-2">
<%= render 'layouts/sidebar' %>
</div>

